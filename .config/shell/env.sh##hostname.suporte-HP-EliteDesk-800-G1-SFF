# https://docs.microsoft.com/en-us/dotnet/core/tools/telemetry
export DOTNET_CLI_TELEMETRY_OPTOUT=1

# lesspipe
[ -x "$(which lesspipe)" ] && eval $(lesspipe)
[ -x "$(which lesspipe.sh)" ] && eval $(lesspipe.sh)

# dircolors
[ -x /usr/bin/dircolors ] && eval "$(/usr/bin/dircolors -b)"

# rust
export PATH=~/.cargo/bin:$PATH

# zsh issue
export LC_CTYPE=en_US.UTF-8
export LC_NUMERIC=en_US.UTF-8

# nix
source ~/.nix-profile/etc/profile.d/nix.sh
# https://github.com/NixOS/nixpkgs/issues/8398
export LOCALE_ARCHIVE=/usr/lib/locale/locale-archive

# conda
export MANPATH=~/conda/man:~/conda/share/man:$MANPATH
source ~/conda/etc/profile.d/conda.sh
export PATH=~/conda/bin:$PATH

# local scripts
export PATH=~/.local/bin:$PATH

# etc
export BROWSER=firefox
export EDITOR=vim
export PAGER=less

# golang
export GOPATH=~/tools/go

